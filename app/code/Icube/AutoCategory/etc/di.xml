<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Console\CommandList">
       <arguments>
           <argument name="commands" xsi:type="array">
               <item name="IcubeAssignNewCategory" xsi:type="object">Icube\AutoCategory\Console\Command\AutoNewCategory</item>
           </argument>
       </arguments>
   </type>
    <type name="Icube\AutoCategory\Logger\CronHandler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Icube\AutoCategory\Logger\CronLogger">
        <arguments>
            <argument name="name" xsi:type="string">autoCategory</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Icube\AutoCategory\Logger\CronHandler</item>
            </argument>
        </arguments>
    </type>
</config>
