<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Icube\AutoCategory\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Icube\AutoCategory\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">icubeAutoCategoryLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Icube\AutoCategory\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Icube\AutoCategory\Console\Command\NewAssignment">
        <arguments>
            <argument name="name" xsi:type="string">icube:autocategory:newassignment</argument>
        </arguments>
    </type>
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="icubeautocategory_newassignment" xsi:type="object">Icube\AutoCategory\Console\Command\NewAssignment</item>
            </argument>
        </arguments>
    </type>
    
</config>
