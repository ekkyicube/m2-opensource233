<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="auto_category" translate="label" sortOrder="1000">
            <label>Icube</label>
        </tab>
        <section id="auto_category_setting" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Auto Category</label>
            <tab>auto_category</tab>
            <resource>Icube_AutoCategory::config</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>
                    <field id="status" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Enable</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="new_range" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>New Range</label>
                        <comment>In Days</comment>
                    </field>
                    <field id="use_cron" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Cron</label>
                    </field>
            </group>
        </section>
    </system>
</config>

